<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@drawable/altroad"
    tools:context="com.john.carsistant.RepairInfo">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="70dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
    <Button
        android:id="@+id/button9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:autoLink="web"
        android:clickable="true"
        android:onClick="goToAirFlt"
        android:text="Air Filters"
        android:layout_weight="1"
        android:textColor="#ffffff"
        android:background="@drawable/button_design"
        android:textSize="14dp"/>

    <Button
        android:id="@+id/button8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:autoLink="web"
        android:clickable="true"
        android:onClick="goToBrakes"
        android:text="Brakes"
        android:layout_weight="1"
        android:textColor="#ffffff"
        android:background="@drawable/button_design"
        android:textSize="14dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="150dp">

    <Button
        android:id="@+id/button6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:autoLink="web"
        android:clickable="true"
        android:onClick="goToCool"
        android:text="Coolant"
        android:layout_weight="1"
        android:textColor="#ffffff"
        android:background="@drawable/button_design"
        android:textSize="14dp"/>

    <Button
        android:id="@+id/button5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:autoLink="web"
        android:clickable="true"
        android:onClick="goToDrvBlt"
        android:text="Drive Belts"
        android:layout_weight="1"
        android:textColor="#ffffff"
        android:background="@drawable/button_design"
        android:textSize="14dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="230dp">

    <Button
        android:id="@+id/button11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:autoLink="web"
        android:clickable="true"
        android:onClick="goToOil"
        android:text="Oil Change"
        android:layout_weight="1"
        android:textColor="#ffffff"
        android:background="@drawable/button_design"
        android:textSize="14dp"/>

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:autoLink="web"
        android:clickable="true"
        android:onClick="goToPowStr"
        android:text="Power Steering"
        android:layout_weight="1"
        android:textColor="#ffffff"
        android:background="@drawable/button_design"
        android:textSize="14dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="310dp">

    <Button
        android:id="@+id/button10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:autoLink="web"
        android:clickable="true"
        android:onClick="goToTire"
        android:text="Tire Rotation"
        android:layout_weight="1"
        android:textColor="#ffffff"
        android:background="@drawable/button_design"
        android:textSize="14dp"/>

    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:autoLink="web"
        android:clickable="true"
        android:onClick="goToPlugs"
        android:text="Spark Plugs"
        android:layout_weight="1"
        android:textColor="#ffffff"
        android:background="@drawable/button_design"
        android:textSize="14dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="390dp">

    <Button
        android:id="@+id/button7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:autoLink="web"
        android:clickable="true"
        android:onClick="goToTrPress"
        android:text="Tire Pressure"
        android:layout_weight="1"
        android:textColor="#ffffff"
        android:background="@drawable/button_design"
        android:textSize="14dp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:autoLink="web"
        android:clickable="true"
        android:onClick="goToTrans"
        android:text="Transmission Fluid"
        android:layout_weight="1"
        android:textColor="#ffffff"
        android:background="@drawable/button_design"
        android:textSize="14dp" />

    </LinearLayout>
</RelativeLayout>
