<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fitsSystemWindows="true"
    android:background="@drawable/altroad"
    tools:context="com.john.carsistant.VehicleInformation">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="56dp"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:textColor="@color/colorWhite"
        android:textColorHint="@color/colorWhite">

        <TextView android:id="@+id/link"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="Vehicle Information:"
            android:gravity="center"
            android:textSize="16dip"
            android:layout_weight="0.23"
            android:textColor="@color/colorWhite"
            android:textColorHint="@color/colorWhite"/>

        <TextView android:id="@+id/text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Manufacturer:"
            android:textSize="16dip"
            android:layout_weight="0.23"
            android:textColor="@color/colorWhite"
            android:textColorHint="@color/colorWhite"/>

        <TextView
            android:id="@+id/man_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:textSize="16dip"
            android:layout_weight="0.23"
            android:textColor="@color/colorAccent"
            android:textColorHint="@color/colorAccent"/>

        <TextView android:id="@+id/text1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Model:"
            android:textSize="16dip"
            android:layout_weight="0.23"
            android:textColor="@color/colorWhite"
            android:textColorHint="@color/colorWhite"/>.

        <TextView
            android:id="@+id/model_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:textSize="16dip"
            android:layout_weight="0.23"
            android:textColor="@color/colorAccent"
            android:textColorHint="@color/colorAccent"/>

        <TextView android:id="@+id/text2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Year:"
            android:textSize="16dip"
            android:layout_weight="0.23"
            android:textColor="@color/colorWhite"
            android:textColorHint="@color/colorWhite"/>

        <TextView
            android:id="@+id/year_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:textSize="16dip"
            android:layout_weight="0.23"
            android:textColor="@color/colorAccent"
            android:textColorHint="@color/colorAccent"/>

        <TextView android:id="@+id/text3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Color:"
            android:textSize="16dip"
            android:layout_weight="0.23"
            android:textColor="@color/colorWhite"
            android:textColorHint="@color/colorWhite"/>

        <TextView
            android:id="@+id/color_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:textSize="16dip"
            android:layout_weight="0.23"
            android:textColor="@color/colorAccent"
            android:textColorHint="@color/colorAccent"/>

        <TextView android:id="@+id/text4"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="License Plate:"
            android:textSize="16dip"
            android:layout_weight="0.23"
            android:textColor="@color/colorWhite"
            android:textColorHint="@color/colorWhite"/>

        <TextView
            android:id="@+id/lic_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:textSize="16dip"
            android:layout_weight="0.23"
            android:textColor="@color/colorAccent"
            android:textColorHint="@color/colorAccent"/>

        <TextView android:id="@+id/text5"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Date Purchased:"
            android:textSize="16dip"
            android:layout_weight="0.23"
            android:textColor="@color/colorWhite"
            android:textColorHint="@color/colorWhite"/>

        <TextView
            android:id="@+id/pur_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:textSize="16dip"
            android:layout_weight="0.23"
            android:textColor="@color/colorAccent"
            android:textColorHint="@color/colorAccent"/>

        <TextView android:id="@+id/text6"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Last-Entered Mileage:"
            android:textSize="16dip"
            android:layout_weight="0.23"
            android:textColor="@color/colorWhite"
            android:textColorHint="@color/colorWhite"/>

        <TextView
            android:id="@+id/mile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:textSize="16dip"
            android:layout_weight="0.23"
            android:textColor="@color/colorAccent"
            android:textColorHint="@color/colorAccent"/>

        <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_delVeh"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"
        android:padding="12dp"
        android:text="Delete This Vehicle"
        android:textColor="#ffffff"
        android:background="@drawable/button_design"
        android:textSize="14dp"/>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_retHm"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"
            android:padding="5dp"
            android:text="Return to Homepage"
            android:textColor="#ffffff"
            android:background="@drawable/button_design"
            android:textSize="14dp"/>

    </LinearLayout>
</ScrollView>